{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Texture features",
    "type": "object",
    "description": "Extension to cube and mip maps to the texture node.",
    "allOf": [ { "$ref": "glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "type": {
            "anyOf": [
                {
                    "enum": [ "2D" ]
                },
                {
                    "enum": [ "CUBE" ]
                }
            ],
            "description": "The type of the texture.",
            "default": "2D"
        },
        "mipMap": {
            "type": "boolean",
            "description": "Specifies whether this texture uses mip maps or not.",
            "default": false
        }
    }
}
