{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Diffuse environment map",
    "type": "object",
    "description": "Extension to add a prefiltered diffuse environment map for IBL.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "diffuseEnvironmentMap": {
            "description": "The prefiltered diffuse environment map.",
            "index": {
                "allOf": [ { "$ref": "glTFid.schema.json" } ],
                "description": "The index of the texture."
            }        
        }
    },
    "required": [
        "diffuseEnvironmentMap"
    ]
}
